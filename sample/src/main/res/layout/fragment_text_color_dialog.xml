<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.larswerkman.holocolorpicker.ColorPicker
    android:id="@+id/text_color_color_picker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <com.larswerkman.holocolorpicker.OpacityBar
    android:id="@+id/text_color_opacity_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

  <com.larswerkman.holocolorpicker.SaturationBar
    android:id="@+id/text_color_saturation_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

  <com.larswerkman.holocolorpicker.ValueBar
    android:id="@+id/text_color_value_picker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

  <LinearLayout
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/text_color_button_negative"
      style="?android:attr/buttonBarButtonStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="100"
      android:text="@string/text_size_cancel" />

    <Button
      android:id="@+id/text_color_button_positive"
      style="?android:attr/buttonBarButtonStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="100"
      android:text="@string/text_size_set" />

  </LinearLayout>

</LinearLayout>
